<h1>用户详情</h1>
<div>
  <b>昵称：</b><%= @user.nick_name %><br/>
  <b>邮箱：</b><%= @user.email %><br/>
  <b>注册时间：</b><%= l @user.created_at %><br/>
  <b>更新时间：</b><%= l @user.updated_at %><br/>
</div>

<%= image_tag @user.avatar.url %>
<%= image_tag @user.avatar.url(:medium) %>
<%= image_tag @user.avatar.url(:small) %>
<%= image_tag @user.avatar.url(:thumb) %>
<%= image_tag @user.avatar.url(:mini) %>

<div>
  <h2>角色</h2>
  <% if @user.roles.to_a.any? %>
    <% @user.roles.each do |role| %>
      <%= link_to "#{role.name}", loyal_passport_app.admin_loyal_passport_role_url(:id => role.id)  %>
    <% end %>
  <% else %>
    为空
  <% end %>
</div>

<%= link_to "编辑", loyal_passport_app.edit_admin_user_url(:id => @user.id) %>
<%= link_to "返回列表", loyal_passport_app.admin_users_url %>
